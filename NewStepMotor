#include <Stepper.h>

const int stepsPerRevolution = 2038;   //This value needs to be different

// initialize the stepper library on pins 8 through 11:
Stepper myStepper(stepsPerRevolution, 8, 10, 9, 11);

float distance = 40;                //Might need to be different
int steps;

void setup() {
  // initialize the serial port:
  Serial.begin(9600);
}

void loop() {
  
    
  
  steps = (distance * stepsPerRevolution) / (2 * 3.14159 * 0.6);

  myStepper.setSpeed(15);    //Anywhere in the loop
  myStepper.step(steps);     //Will be in case 10 Running Sample
 
  myStepper.step(-steps);     //Will be in case 12 Returning to Main Menu
  
  delay(1000);

}
